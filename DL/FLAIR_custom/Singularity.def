Bootstrap: docker
From: tensorflow/tensorflow:2.12.0-gpu-jupyter
Stage: spython-base

%labels
maintainer="tais.grippa@ulb.be"
%post
### DOCKER FILE DESCRIPTION 
## Base image: Tensorflow 2.10 - Cuda driver 11.2.0 with Ubuntu Focal (20.04); 
## Softwares: Python3 (numpy, scipy, pandas, OpenCV, Gdal), Jupyter Lab

DEBIAN_FRONTEND=noninteractive

# Update & upgrade system
apt-get -y update && \
apt-get -y upgrade
apt-get install -y --no-install-recommends apt-utils

# Install Numpy, Scikit-learn, Pandas, Natsort 
apt-get install -y --no-install-recommends \
python3-numpy \
python3-sklearn \
python3-pandas \
python3-natsort

# Install Gdal, Graphviz and Pydot (for tf.plot_model), OpenCV
apt-get -y update
apt-get install -y --no-install-recommends \
python3-gdal \
python3-graphviz \
python3-pydot \
python3-opencv

# Install Jupyterlab
pip install jupyterlab
JUPYTER_ENABLE_LAB=yes
PATH="$HOME/.local/bin:$PATH"

# Reduce image size
apt-get autoremove -y && \
apt-get clean -y
	
%environment
export LANG=C.UTF-8
export LC_ALL=C.UTF-8
export JUPYTER_ENABLE_LAB=yes
export PATH="$HOME/.local/bin:$PATH"
%runscript
exec jupyter lab --port=8888 --no-browser --ip=0.0.0.0 --allow-root "$@"
%startscript
exec jupyter lab --port=8888 --no-browser --ip=0.0.0.0 --allow-root "$@"
